<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Vehicles Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="VVE_CarPartBase"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VVE_EngineBlock"]/statBases</xpath>
					<value>
						<Bulk>20</Bulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VVE_CarAlternator"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VVE_CarExhaust"]/statBases</xpath>
					<value>
						<Bulk>10</Bulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VVE_CarSuspension"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VVE_CarWheel"]/statBases</xpath>
					<value>
						<Bulk>10</Bulk>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>