<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[SYR] Individuality</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- ===== Trait: Stealthy ===== -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/TraitDef[defName = "SYR_Agile"]/degreeDatas/li/statOffsets/MeleeDodgeChance</xpath>
					<value>
						<MeleeDodgeChance>0.35</MeleeDodgeChance>
					</value>
				</li>

				<!-- ===== Trait: Hand-eye Coordination ===== -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/TraitDef[defName = "SYR_HandEyeCoordination"]/degreeDatas/li/statOffsets/MeleeHitChance</xpath>
					<value>
						<MeleeHitChance>2.5</MeleeHitChance>
					</value>
				</li>

				<!-- ===== Trait: Steady Hands ===== -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/TraitDef[defName = "SYR_SteadyHands"]/degreeDatas/li/statOffsets/ShootingAccuracyPawn</xpath>
					<value>
						<ShootingAccuracyPawn>1</ShootingAccuracyPawn>
					</value>
				</li>

				<!-- ===== Trait: Strong Back ===== -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/TraitDef[defName = "SYR_StrongBack"]/degreeDatas/li/statOffsets/CarryingCapacity</xpath>
					<value>
						<CarryWeight>+20</CarryWeight>
						<CarryBulk>+20</CarryBulk>
					</value>
				</li>

			</operations>

		</match>
	</Operation>

</Patch>