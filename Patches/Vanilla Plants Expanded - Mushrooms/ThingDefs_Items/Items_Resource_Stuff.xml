<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded - Mushrooms</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="VPE_Mycothread"]/statBases/StuffPower_Armor_Sharp</xpath>
					<value>
						<StuffPower_Armor_Sharp>0.009</StuffPower_Armor_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="VPE_Mycothread"]/statBases/StuffPower_Armor_Blunt</xpath>
					<value>
						<StuffPower_Armor_Blunt>0.015</StuffPower_Armor_Blunt>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="VPE_Mycothread"]/statBases/StuffPower_Armor_Heat</xpath>
					<value>
						<StuffPower_Armor_Heat>0.04</StuffPower_Armor_Heat>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="VPE_Mycothread"]/statBases</xpath>
					<value>
						<Bulk>0.05</Bulk>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>