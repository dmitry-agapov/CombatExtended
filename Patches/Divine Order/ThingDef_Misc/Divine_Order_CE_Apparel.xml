<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Divine Order</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<!-- Cloak  -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderCloak" or defName="BotchJob_InquisitorCloak"]/statBases</xpath>
					<value>
						<Bulk>3</Bulk>
						<WornBulk>0.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderCloak" or defName="BotchJob_InquisitorCloak"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Fur Cloak -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderFurCloak"]/statBases</xpath>
					<value>
						<Bulk>3</Bulk>
						<WornBulk>0.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderFurCloak"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
					</value>
				</li>
				
				<!-- Zealot Robes -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderZealotRobes"]/statBases</xpath>
					<value>
						<Bulk>20</Bulk>
						<WornBulk>6</WornBulk>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderZealotRobes"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Headstuff -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderHood" or defName="BotchJob_DivineOrderFurHood"]/statBases</xpath>
					<value>
						<Bulk>3</Bulk>
						<WornBulk>0.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderHood" or defName="BotchJob_DivineOrderFurHood"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Merchant Hat -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderMerchantHat"]/statBases</xpath>
					<value>
						<Bulk>3</Bulk>
						<WornBulk>0.5</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderMerchantHat"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>1</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Tunic (But its really a gambeson) -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderTunic"]/statBases</xpath>
					<value>
						<Bulk>15</Bulk>
						<WornBulk>6</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderTunic"]/apparel/bodyPartGroups</xpath>
					<value>
						<li>Arms</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderTunic"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>10</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Breeches -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderBreeches"]/statBases</xpath>
					<value>
						<Bulk>2</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderBreeches"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>