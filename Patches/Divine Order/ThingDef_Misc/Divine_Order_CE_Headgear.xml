<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Divine Order</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<!-- Cowled Helmet -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderCowledHelmet"]/statBases</xpath>
					<value>
						<Bulk>3</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderCowledHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderCowledHelmet"]/statBases</xpath>
					<value>
						<ArmorRating_Sharp>1</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderCowledHelmet"]/statBases</xpath>
					<value>
						<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
					</value>
				</li>

				<!-- Plate Helmet -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderOpenHelmet"]/costStuffCount</xpath>
					<value>
						<costStuffCount>100</costStuffCount>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateHelmet" or defName="BotchJob_DivineOrderOpenHelmet"]/statBases</xpath>
					<value>
						<Bulk>6</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateHelmet" or defName="BotchJob_DivineOrderOpenHelmet"]/apparel/bodyPartGroups</xpath>
					<value>
						<bodyPartGroups>
							<li>FullHead</li>
						</bodyPartGroups>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateHelmet"]/equippedStatOffsets/ShootingAccuracyPawn</xpath>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateHelmet" or defName="BotchJob_DivineOrderOpenHelmet"]/equippedStatOffsets</xpath>
					<value>
						<AimingAccuracy>-0.4</AimingAccuracy><!--CE Bascinet-->
						<MeleeHitChance>-2</MeleeHitChance>
						<Suppressability>-0.20</Suppressability>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateHelmet" or defName="BotchJob_DivineOrderOpenHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3.75</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Light Helmet -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderLightHelmet"]/statBases</xpath>
					<value>
						<Bulk>4</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderLightHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>2.2</StuffEffectMultiplierArmor>
					</value>
				</li>

				<!-- Crusader Helmet -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_CrusaderHelmet" or defName="BotchJob_HeraldHelmet"]/statBases</xpath>
					<value>
						<Bulk>6</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_CrusaderHelmet" or defName="BotchJob_HeraldHelmet"]/apparel/bodyPartGroups</xpath>
					<value>
						<bodyPartGroups>
							<li>FullHead</li>
						</bodyPartGroups>
					</value>
				</li>

				<!-- Slightly Better than Plate Helm for hitting -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_CrusaderHelmet"]/equippedStatOffsets</xpath>
					<value>
						<equippedStatOffsets>
							<AimingAccuracy>-0.4</AimingAccuracy><!--CE Bascinet-->
							<Suppressability>-0.20</Suppressability>
						</equippedStatOffsets>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_HeraldHelmet"]/equippedStatOffsets</xpath>
					<value>
						<AimingAccuracy>-0.4</AimingAccuracy><!--CE Bascinet-->
						<MeleeHitChance>-2</MeleeHitChance>
						<Suppressability>-0.20</Suppressability>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_CrusaderHelmet" or defName="BotchJob_HeraldHelmet"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3.75</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_CrusaderHelmet" or defName="BotchJob_HeraldHelmet"]/statBases</xpath>
					<value>
						<ArmorRating_Sharp>1</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_CrusaderHelmet"]/statBases</xpath>
					<value>
						<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
					</value>
				</li>

				<!-- Inquisitor Helmet -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_InquisitorHat"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_InquisitorHat"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_InquisitorHat"]/statBases</xpath>
					<value>
						<ArmorRating_Sharp>1</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_InquisitorHat"]/statBases</xpath>
					<value>
						<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>