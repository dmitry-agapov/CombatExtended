<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Divine Order</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<!-- Skirmisher Armor -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderSkirmisherArmor"]/statBases</xpath>
					<value>
						<Bulk>18</Bulk>
						<WornBulk>4</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderSkirmisherArmor"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderSkirmisherArmor"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>1</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderSkirmisherArmor"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
					</value>
				</li>

				<!-- Inquisitor Garb -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_InquisitorArmor"]/statBases</xpath>
					<value>
						<Bulk>18</Bulk>
						<WornBulk>4</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_InquisitorArmor"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>6</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_InquisitorArmor"]/statBases</xpath>
					<value>
						<ArmorRating_Sharp>1</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_InquisitorArmor"]/statBases</xpath>
					<value>
						<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
					</value>
				</li>

				<!-- Inquisitor Garb -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_HeraldRobes"]/statBases</xpath>
					<value>
						<Bulk>20</Bulk>
						<WornBulk>6</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_HeraldRobes"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>10</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_HeraldRobes"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>1</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_HeraldRobes"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
					</value>
				</li>

				<!--Breast Plate-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderBreastplate"]/statBases</xpath>
					<value>
						<Bulk>25</Bulk>
						<WornBulk>10</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderBreastplate"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3.2</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderBreastplate"]/equippedStatOffsets/MoveSpeed</xpath>
				</li>

				<!-- Plate Armor -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateArmor" or defName="BotchJob_CrusaderArmor"]/statBases</xpath>
					<value>
						<Bulk>100</Bulk>
						<WornBulk>10</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateArmor" or defName="BotchJob_CrusaderArmor"]/statBases/StuffEffectMultiplierArmor</xpath>
					<value>
						<StuffEffectMultiplierArmor>3</StuffEffectMultiplierArmor>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateArmor"]/statBases/Mass</xpath>
					<value>
						<Mass>15</Mass>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateArmor" or defName="BotchJob_CrusaderArmor"]/equippedStatOffsets/MoveSpeed</xpath>
					<value>
						<MeleeDodgeChance>-0.15</MeleeDodgeChance>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateArmor" or defName="BotchJob_CrusaderArmor"]/apparel/bodyPartGroups</xpath>
					<value>
						<li>Hands</li>
						<li>Feet</li>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="BotchJob_DivineOrderPlateArmor" or defName="BotchJob_CrusaderArmor"]</xpath>
					<value>
						<li Class="CombatExtended.PartialArmorExt">
							<stats>
								<li>
									<ArmorRating_Sharp>0.70</ArmorRating_Sharp>
									<parts>
										<li>Neck</li>
									</parts>
								</li>
								<li>
									<ArmorRating_Blunt>0.70</ArmorRating_Blunt>
									<parts>
										<li>Neck</li>
									</parts>
								</li>
								<li>
									<ArmorRating_Sharp>0.90</ArmorRating_Sharp>
									<parts>
										<li>Leg</li>
									</parts>
								</li>
								<li>
									<ArmorRating_Blunt>0.90</ArmorRating_Blunt>
									<parts>
										<li>Leg</li>
									</parts>
								</li>
								<li>
									<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
									<parts>
										<li>Arm</li>
									</parts>
								</li>
								<li>
									<ArmorRating_Blunt>0.80</ArmorRating_Blunt>
									<parts>
										<li>Arm</li>
									</parts>
								</li>
								<li>
									<ArmorRating_Sharp>0.60</ArmorRating_Sharp>
									<parts>
										<li>Hand</li>
									</parts>
								</li>
								<li>
									<ArmorRating_Blunt>0.60</ArmorRating_Blunt>
									<parts>
										<li>Hand</li>
									</parts>
								</li>
							</stats>
						</li>
					</value>
				</li>

				<!-- Elite Armor -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_CrusaderArmor"]/statBases</xpath>
					<value>
						<ArmorRating_Sharp>1</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="BotchJob_CrusaderArmor"]/statBases</xpath>
					<value>
						<ArmorRating_Blunt>1.5</ArmorRating_Blunt>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>