<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Kurin, The Three Tailed Fox [Deluxe Edition]</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- === Add ammo to scenario === -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ScenarioDef[defName="Kurin_Scenario_1"]/scenario/parts</xpath>
					<value>
						<li Class="ScenPart_StartingThing_Defined">
							<def>StartingThing_Defined</def>
							<thingDef>Ammo_556x45mmNATO_FMJ</thingDef>
							<count>200</count>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ScenarioDef[defName="Kurin_Scenario_2"]/scenario/parts</xpath>
					<value>
						<li Class="ScenPart_StartingThing_Defined">
							<def>StartingThing_Defined</def>
							<thingDef>Ammo_556x45mmNATO_FMJ</thingDef>
							<count>200</count>
						</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ScenarioDef[defName="Kurin_Scenario_3"]/scenario/parts</xpath>
					<value>
						<li Class="ScenPart_StartingThing_Defined">
							<def>StartingThing_Defined</def>
							<thingDef>Ammo_556x45mmNATO_FMJ</thingDef>
							<count>200</count>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>