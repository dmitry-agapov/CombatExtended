<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>More Archotech Garbage Continued</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="archotechmatteraddingsomecraptoavoidproblems"]/statBases</xpath>
					<value>
						<Bulk>0.01</Bulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="archotechmatteraddingsomecraptoavoidproblems"]/stuffProps/categories</xpath>
					<value>
						<li>Metallic_Weapon</li>
						<li>Steeled</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="archotechmatteraddingsomecraptoavoidproblems"]/statBases/StuffPower_Armor_Sharp</xpath>
					<value>
						<StuffPower_Armor_Sharp>4</StuffPower_Armor_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="archotechmatteraddingsomecraptoavoidproblems"]/statBases/StuffPower_Armor_Blunt</xpath>
					<value>
						<StuffPower_Armor_Blunt>6</StuffPower_Armor_Blunt>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="archotechmatteraddingsomecraptoavoidproblems"]/stuffProps/statFactors</xpath>
					<value>
						<MeleePenetrationFactor>2</MeleePenetrationFactor>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="archotechmatteraddingsomecraptoavoidproblems"]/statBases/SharpDamageMultiplier</xpath>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="archotechmatteraddingsomecraptoavoidproblems"]/statBases/BluntDamageMultiplier</xpath>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="archotechmatteraddingsomecraptoavoidproblems"]/statBases/ShootingAccuracyTurret</xpath>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>